@model WarehouseManagementSystem.Helper.MenuItem

@if (Model.Divider)
{
		<li role="separator" class="divider"></li>
}

@if (Model.SubItems.Count == 0)
{
		<li class="subMenuItem">
				
				<a href="@Url.Action(Model.Action, Model.Controller)">
						<span class="@Model.Icon" aria-hidden="true"></span>
					 @Model.Text
				</a>
		</li>
}
else
{
		<li class="dropdown-submenu">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-id="@Model.Text">
						@Model.Text
						<span class="glyphicon glyphicon-play leftArrowMenu" aria-hidden="true"></span>
				</a>
				<ul class="dropdown-menu subMenu nav subMenuItem" id="@Model.Text">
						@foreach (var child in Model.SubItems)
						{
										@Html.Partial("MenuItem", child)
						}
				</ul>
		</li>
}

